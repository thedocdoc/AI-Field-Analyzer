            f.write("Timestamp,CO2_ppm,VOC_ppb,Temperature_C,Humidity_%,Lux,CPM,uSv/h,CPU_%,Memory_%,Loop_ms,CPU_Temp_C\n")
        
        print(f"‚úÖ SD logging to: {LOG_FILE}")
        return True

    except OSError:
        sd_available = False
        LOG_FILE = None
        print("üö® SD Card not found! Logging disabled.")
        return False

