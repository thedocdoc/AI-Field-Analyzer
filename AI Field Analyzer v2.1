    warnings.append("‚úÖ Excellent air quality.") if eCO2 < gui.co2_threshold else warnings.append("‚ö†Ô∏è CO‚ÇÇ rising‚Äîventilate soon.") if eCO2 < 2000 else warnings.append("üö® Dangerous CO‚ÇÇ levels!")
    warnings.append("‚úÖ Air is clean.") if TVOC < 500 else warnings.append("‚ö†Ô∏è Chemical odors detected.") if TVOC < 2000 else warnings.append("üö® High VOC levels!")
    return warnings

def get_radiation_warning(uSv_h):
    if uSv_h < gui.rad_threshold:
        return "‚úÖ Background radiation‚Äîno risk."
    elif uSv_h < 5.0:
        return "‚ö†Ô∏è Elevated radiation‚Äîlimit exposure to 30 min."
    else:
        return "üö® Dangerous radiation levels‚Äîevacuate immediately!"

def get_light_warning(lux, ir, visible):
    warnings = []
    if lux < 1:
        warnings.append("‚ö´ Dark conditions - use caution")
    elif lux < 10:
        warnings.append("üåô Low light - limited visibility")
    elif lux > 10000:
        warnings.append("üîÜ Bright sunlight - eye protection advised")
    
    if visible > 0:
        ir_ratio = ir / visible
        if ir_ratio > 2.0:
            warnings.append("üî¥ High IR signature detected")
    
    return warnings

